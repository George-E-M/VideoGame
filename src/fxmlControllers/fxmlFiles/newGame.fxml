<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxmlControllers.CharacterCreationController">
   <children>
      <VBox alignment="CENTER" prefHeight="550.0" prefWidth="800.0" spacing="40.0">
         <children>
            <Label alignment="CENTER" text="Character Creation" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="48.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0" spacing="100.0">
               <children>
                  <Label text="Name">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
                  <TextField prefHeight="50.0" prefWidth="300.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0" spacing="50.0">
               <children>
                  <Label text="Class">
                     <font>
                        <Font size="30.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Label>
                  <Button mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="Fighter" />
                  <Button mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="Rogue" />
                  <Button mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="Mage" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="200.0">
               <children>
                  <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Back">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Continue">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
