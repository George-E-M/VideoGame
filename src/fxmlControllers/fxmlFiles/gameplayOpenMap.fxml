<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxmlControllers.GameplayOpenMapController">
   <children>
      <VBox prefHeight="550.0" prefWidth="800.0">
         <children>
            <TextArea fx:id="map" prefHeight="406.0" prefWidth="780.0">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Consolas" size="12.0" />
               </font>
            </TextArea>
            <HBox prefHeight="124.0" prefWidth="800.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="140.0" prefWidth="300.0">
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#moveUp" prefHeight="50.0" prefWidth="50.0" text="UP" />
                        <HBox alignment="CENTER" prefHeight="65.0" prefWidth="300.0" spacing="10.0">
                           <children>
                              <Button alignment="CENTER" mnemonicParsing="false" onAction="#moveLeft" prefHeight="50.0" prefWidth="50.0" text="Left" />
                              <Button alignment="CENTER" mnemonicParsing="false" onAction="#moveDown" prefHeight="50.0" prefWidth="50.0" text="Down" />
                              <Button alignment="CENTER" mnemonicParsing="false" onAction="#moveRight" prefHeight="50.0" prefWidth="50.0" text="Right" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
